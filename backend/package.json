{
  "name": "test-dashboard",
  "version": "1.0.0",
  "description": "Centralized E2E test dashboard for all platform projects",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci",
    "run-tests": "node scripts/run-tests.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"],
    "collectCoverageFrom": [
      "server.js",
      "!**/node_modules/**"
    ]
  }
}
